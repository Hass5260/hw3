<h1> <%= @place.name %> </h1>

<h3>Activities</h3>
    <ul>
        <% for post in @place.posts%>
            <li>
                <%= post.name %>, <%= post.posted_on %>, <%= post.description %>,
            </li>
        <% end %>
    </ul>


<a href="/posts/new?place_id=<%=@place.id%>"> Add an activity</a>

<p>
    <%= button_to "Delete Destination", @place, method: :delete%>
</p>

<button type="button"><a href="/places"> Back to destinations list</a>